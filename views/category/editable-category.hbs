<link rel="stylesheet" href="/css/input.css">
<div class="container-fluid mb-4">
    <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="d-flex flex-row align-items-center">
            <h3>{{#if editable}} Edit {{else}} Create new {{/if}}</h3>
        </div>
    </div>
    <div class="card mt-4">
        <form name="category-form" method="post" {{#if editable}} action="/admin/category/edit/{{ category.id }}" editable="true"
            {{else}} action="/admin/category" {{/if}}>
            <div class="row p-4">
                <h5 class="mb-4 mt-0">Category details</h5>
                <div class="form-group col-md-6">
                    <label class="form-label">Name *</label>
                    <input name="name" type="text" class="form-control" aria-label="name"
                        value="{{ category.name }}" required>
                </div>
            </div>
            <div class="d-flex mb-4 justify-content-center text-center">
 <span class="badge-error border-radius-xl center mx-auto">{{ message }}</span>            </div>
            <div class="d-md-flex justify-content-center text-center">
                <button id="submitBtn" type="submit" class="btn btn-primary btn-sm">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    // breadcrumbs
    const breadcrumbs = $('.breadcrumb');
    let breadcrumbContent = `
            <li class="breadcrumb-item text-sm"><a class="text-dark" href="/admin/"><span class="breadcrumb-text">Dashboard</span></a></li>
            <li class="breadcrumb-item text-sm"><a class="text-dark" href="/admin/category"><span class="breadcrumb-text">Categories</span></a></li>
        `;
    if ($('form[name="category-form"]').attr('editable') === 'true') {
        breadcrumbContent += `
                <li class="breadcrumb-item text-sm text-dark active">Edit</li>
            `;
    } else {
        breadcrumbContent += `
                <li class="breadcrumb-item text-sm text-dark active">Create new</li>
            `;
    }
    breadcrumbs.html(breadcrumbContent);
</script>