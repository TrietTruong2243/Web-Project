<script>
    $(document).ready(function () {
        $("#signin").on('submit', function (e) {
            e.preventDefault();
            const formData = $(this).serialize();

            $.ajax({
                type: 'POST',
                url: '/auth/signin',
                data: formData,
                //dataType: 'string',
                success: function (response) {
                    $("#err").text(response)
                    
                },
                error: function (err) {
                 

                }
            })
        })

    });

</script>
