            $(".page-item.active").removeClass("active");
            $(this).addClass("active");
            const value = $("#findQuery").val();
            const page = $(this).val();
            $.ajax({
                type: 'GET',
                url: '/getfindproductbypage',
                data: { value: value, page: page },
                success(data) {
                    const allProduct = data.pagedata.list
