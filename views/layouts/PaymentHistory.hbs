<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="#">
    <title>Payment History</title>
    <link href="/resource/css2.css" rel="stylesheet">
    <link rel="stylesheet" href="/resource/bootstrap.min.css">
    <link rel="stylesheet" href="/resource/common.css">
    <link rel="stylesheet" href="/resource/header.css">
    <link rel="stylesheet" href="/resource/payment-history.css">
</head>

<body>
    <!-- header -->
    {{> headers/page_header}}

    {{!-- content --}}
    <div class="container mt-4 mb-2 flex-grow-1">
        {{#if paymentHistories.length}}
        <table class="table table-striped table-bordered bg-white" style="box-shadow:var(--box-shadow)">
            <thead>
                <tr>
                    <th scope="col">Mã giao dịch</th>
                    <th scope="col">Thời gian</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Tổng tiền</th>
                    <th scope="col">Số dư</th>
                </tr>
            </thead>
            <tbody>
                {{#each paymentHistories}}
                {{#with this}}
                <tr>
                    <td>{{transactionCode}}</td>
                    <td>{{formatDate createdAt}}</td>
                    <td style="word-wrap: break-word; overflow-wrap: break-word; max-width: 400px">{{content}}</td>
                    <td>{{formatCurrency totalMoney}}</td>
                    <td>{{formatCurrency afterBalance}}</td>

                </tr>
                {{/with}}
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="px-3 py-4 text-center no-transaction">Bạn chưa thực hiện bất kỳ giao dịch nào!</p>
        {{/if}}
    </div>


    <!-- footer -->
    {{> footers/page_footer}}
</body>

</html>